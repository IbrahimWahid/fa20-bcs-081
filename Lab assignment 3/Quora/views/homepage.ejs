<h1>Questions</h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Question:</th>
        </tr>
    </thead>
    <tbody>
        <% for( let index = 0; index < questions.length; index++ ) { %>
            <tr>
                <td><%= questions[index].text %></td>
                <td><a class="btn btn-light" href="/question/<%= questions[index]._id %>" >Details</a></td> 
            </tr>
        <% } %>

    </tbody>
</table>
<form action="" method="post" class="mt-5">
    <h5>Post A Question</h5>
    <div class="row">
            <div class="col-8">
                <input class="form-control" type="text" id="text" name="text" value="" placeholder="Enter your Question here..."/>
            </div>
            <div class="col-2">
                <button class="btn btn-dark" type="submit">Post</button>
            </div>
    </div>
</form>